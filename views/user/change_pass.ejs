        <script>
            function check_submit() {
                if (pass_chk) {
                    return true;
                } else {
                    if (!pass_chk) { alert('Please Enter Correct Password') }
					if (!pass_val) {
                        $('#pass').addClass('is-invalid');
                        alert('Please match the password credentials');
                    } else {
                        $('#pass').removeClass('is-invalid');
                    }
                    return false;
                }
            }
        </script>